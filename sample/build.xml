<project default="compile">

    <path id="project.classpath">
        <pathelement location="." />
        <pathelement location="../log4j-azure.jar"/>
        <fileset dir="../lib/">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="clean">
        <delete>
	        <fileset dir="." >
	            <include name="*.class"/>
	            <include name="azure.log"/>
	        </fileset>
	    </delete>
    </target>

    <target name="compile">
        <javac srcdir=".">
            <classpath refid="project.classpath"/>
	    </javac>
    </target>

    <target name="run" depends="compile">
        <java classname="LogExample">
            <arg value="Dlog4j.configuration=log4j.properties"/>
            <classpath refid="project.classpath"/>
        </java>
    </target>

</project>


